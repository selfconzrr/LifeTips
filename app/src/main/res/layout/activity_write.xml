<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/notes_bg"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <com.example.zhangruirui.lifetips.notes.DateLine
    android:textColor="#ffff0000"
    android:gravity="center"
    android:id="@+id/writedate"
    android:background="@drawable/shapetop"
    android:layout_width="300.0dip"
    android:layout_height="30.0dip"
    android:layout_marginTop="10.0dip"
    android:layout_centerHorizontal="true" />

  <com.example.zhangruirui.lifetips.notes.DrawLine
    android:textSize="18.0sp"
    android:textColor="#ff000000"
    android:gravity="top"
    android:id="@+id/edittext"
    android:background="@drawable/shape"
    android:scrollbars="vertical"
    android:layout_width="300.0dip"
    android:layout_height="108.0dip"
    android:layout_below="@id/writedate"
    android:layout_centerHorizontal="true"
    android:lineSpacingExtra="3.0dip" />

  <Button
    android:textColor="#ffffffff"
    android:id="@+id/button"
    android:background="@drawable/notes_button"
    android:layout_width="130.0dip"
    android:layout_height="40.0dip"
    android:layout_marginTop="30.0dip"
    android:text="@string/dialog_memo_cancle"
    android:layout_below="@id/edittext"
    android:layout_alignRight="@id/edittext"
    android:layout_alignEnd="@id/edittext" />

  <Button
    android:textColor="#ffffffff"
    android:id="@+id/button2"
    android:background="@drawable/notes_button"
    android:layout_width="130.0dip"
    android:layout_height="40.0dip"
    android:layout_marginTop="30.0dip"
    android:text="@string/save"
    android:layout_below="@id/edittext"
    android:layout_alignBaseline="@id/button"
    android:layout_alignLeft="@id/edittext"
    android:layout_alignStart="@id/edittext" />

</RelativeLayout>