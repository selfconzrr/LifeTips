<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView
    android:id="@+id/dateTextView"
    android:textColor="#ffff0000"
    android:gravity="center"
    android:background="@drawable/top_line"
    android:layout_width="300.0dip"
    android:layout_height="27.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_centerHorizontal="true" />

  <TextView
    android:textSize="18.0sp"
    android:textColor="#ff000000"
    android:id="@+id/contentTextView"
    android:background="@drawable/bottom_line"
    android:layout_width="300.0dip"
    android:layout_height="68.0dip"
    android:layout_below="@id/dateTextView"
    android:layout_centerHorizontal="true" />


  <Button
    android:id="@+id/notes_delete"
    android:background="@drawable/notes_delete"
    android:focusable="false"
    android:layout_width="27.0dip"
    android:layout_height="27.0dip"
    android:layout_marginRight="7.0dip"
    android:layout_above="@id/contentTextView"
    android:layout_alignRight="@id/contentTextView"
    android:layout_marginEnd="7.0dip"
    android:layout_alignEnd="@id/contentTextView" />

  <Button
    android:id="@+id/notes_edit"
    android:background="@drawable/notes_edit"
    android:focusable="false"
    android:layout_width="27.0dip"
    android:layout_height="27.0dip"
    android:layout_marginLeft="7.0dip"
    android:layout_above="@id/contentTextView"
    android:layout_alignLeft="@id/contentTextView"
    android:layout_marginStart="7.0dip"
    android:layout_alignStart="@id/contentTextView" />

</RelativeLayout>