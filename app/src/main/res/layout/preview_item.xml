<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/check_relativelayout01">"

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20dip"
      android:text="keyword"
      android:id="@+id/check_textview01" />

    <RelativeLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@id/check_textview01"
      android:id="@+id/check_relativelayout02">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:text="account"
        android:id="@+id/check_textview02" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:text="password"
        android:layout_toRightOf="@id/check_textview02"
        android:layout_marginLeft="5dip"
        android:id="@+id/check_textview03" />
    </RelativeLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15dip"
      android:text="remind"
      android:layout_below="@id/check_relativelayout02"
      android:layout_alignParentLeft="true"
      android:id="@+id/check_textview04" />
  </RelativeLayout>
</LinearLayout>