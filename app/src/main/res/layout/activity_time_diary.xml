<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
  android:background="@drawable/notes_bg"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <Button
    android:textColor="#ffffffff"
    android:id="@+id/add_event"
    android:background="@drawable/add_event"
    android:paddingRight="100.0dip"
    android:layout_width="fill_parent"
    android:layout_height="55.0dip"
    android:text="@string/add_event"
    android:paddingEnd="100.0dip"
    tools:ignore="RtlSymmetry" />

  <Button
    android:textColor="#ffffffff"
    android:id="@+id/number"
    android:background="@drawable/notes_num"
    android:layout_width="55.0dip"
    android:layout_height="55.0dip"
    android:layout_marginRight="17.0dip"
    android:layout_alignRight="@id/add_event"
    android:layout_alignParentRight="true"
    android:layout_marginEnd="17.0dip"
    android:layout_alignEnd="@id/add_event"
    android:layout_alignParentEnd="true" />

  <ListView
    android:id="@+id/listview"
    android:layout_width="fill_parent"
    android:layout_height="465.0dip"
    android:listSelector="#00000000"
    android:layout_below="@id/add_event" />

</RelativeLayout>