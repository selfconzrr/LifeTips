<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background_texture"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".compass.CompassActivity">

  <Button
    android:id="@+id/direction"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/show_direction"
    android:paddingTop="20dp"
    android:layout_marginTop="20dp"
    android:text="@string/direction"
    android:textColor="#FFF"
    android:textSize="30sp" />

  <com.example.zhangruirui.lifetips.compass.SampleView
    android:id="@+id/sampleView"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:layout_constraintTop_toBottomOf="@+id/direction"
    />
</android.support.constraint.ConstraintLayout>